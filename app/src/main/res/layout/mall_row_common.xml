<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="81.5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/mall_row_common_img_pic"
            android:layout_width="75.5dp"
            android:layout_height="75.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="#a7b4f5" />

        <ImageView
            android:layout_width="75.5dp"
            android:layout_height="75.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/picture_border" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mall_row_common_txt_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(주)모모스타일"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/mall_row_common_txt_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="120,000원"
                android:textColor="#532c77"
                android:textSize="18dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/mall_row_common_txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피팅모델분 구합니다."
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mall_row_common_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="시작일:2016.4.14(목), 6시간"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/mall_row_common_img_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bookmark"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>