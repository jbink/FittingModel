<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/round_rectangle1">

        <TextView
            android:id="@+id/login_popup_title"
            android:textSize="18dp"
            android:gravity="center"
            android:text="LOGIN"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_below="@+id/login_popup_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            android:background="#e1e1e1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/login_popup_ibtn_mall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:background="@drawable/btn_category"/>
                <TextView
                    android:id="@+id/login_popup_txt_mall"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:enabled="true"
                    android:onClick="onClick"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7b7b7b"
                    android:text="쇼핑몰"/>

                <ImageButton
                    android:id="@+id/login_popup_ibtn_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/btn_category"/>
                <TextView
                    android:id="@+id/login_popup_txt_model"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:enabled="true"
                    android:onClick="onClick"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_7b7b7b"
                    android:text="모델"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/login_popup_txt_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_padding"
                android:text="아이디(전화번호)"/>
            <TextView
                android:id="@+id/login_tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_padding"
                android:background="@drawable/border_rect_white"/>
            <TextView
                android:id="@+id/login_popup_txt_1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_padding"
                android:text="비밀번호"/>
            <EditText
                android:id="@+id/login_edt_pw"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edittext_padding"
                android:background="@drawable/border_rect_white"/>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/login_btn_check"
                    android:onClick="onClick"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/checkbox_up"/>

                <TextView
                    android:id="@+id/login_txt_check"
                    android:onClick="onClick"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자동로그인"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

            <Button
                android:id="@+id/login_btn_back"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#f9f9f9"
                android:text="취소"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/login_btn_login"
                android:onClick="onClick"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_7131ad"
                android:text="로그인"
                android:textColor="@color/white" />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>