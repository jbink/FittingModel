<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/mall_signup_2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/mall_signup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="쇼핑몰 회원가입"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/default_background"
        android:scrollbarSize="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp">

                <!-- 사업자명 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="사업자명"
                    android:textColor="#404040"
                    android:textSize="16dp" />

                <TextView
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:hint="상호명"
                    android:textSize="14dp" />

                <!-- 사업형태 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="사업자 소개"
                    android:textColor="#404040"
                    android:textSize="16dp" />


                <EditText
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:hint="쇼핑몰 소개"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="14dp" />

                <!-- 사업자 URL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="사업자 URL"
                    android:textColor="#404040"
                    android:textSize="16dp" />


                <EditText
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:hint="쇼핑몰 주소"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="14dp" />

                <!-- 연락처 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="연락처"
                    android:textColor="#404040"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <EditText
                        style="@style/edittext_padding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:background="@drawable/round_rect_edit"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/mall_signup_2_tv_auth_num"
                        style="@style/edittext_padding"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/round_rect_btn"
                        android:enabled="true"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:text="인증번호"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:gravity="center"
                    android:hint="인증번호를 입력하세요"
                    android:textSize="14dp" />

                <!-- 쇼핑몰 카테고리 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="쇼핑몰 카테고리"
                    android:textColor="#404040"
                    android:textSize="16dp" />


                <include layout="@layout/include_category" />

                <!-- 주소 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="주소"
                    android:textColor="#404040"
                    android:textSize="16dp" />


                <EditText
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:hint="주소를 입력하세요"
                    android:textSize="14dp" />

                <EditText
                    style="@style/edittext_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_rect_edit"
                    android:hint="세부 주소를 입력하세요"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/mall_signup_2_btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#f9f9f9"
                    android:onClick="onClick"
                    android:text="회원가입 완료"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/mall_signup_2_btn_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_7131ad"
                    android:onClick="onClick"
                    android:text="구인등록 하러가기 →"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>