<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/model_signup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/mall_signup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="모델 회원가입"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <!-- 연락처 -->
            <TextView
                android:id="@+id/model_signup_tv_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처(ID)"
                android:textColor="#404040"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/model_signup_tv_phone_num"
                    style="@style/edittext_padding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:background="@drawable/round_rect_edit"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:textSize="14dp" />


                <TextView
                    android:id="@+id/model_signup_btn_auth_num"
                    style="@style/edittext_padding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/round_rect_btn"
                    android:enabled="true"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="인증번호"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>

            <!-- 인증번호 입력 -->
            <TextView
                android:id="@+id/model_signup_tv_auth_num"
                style="@style/edittext_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_rect_edit"
                android:gravity="center"
                android:hint="인증번호를 입력하세요"
                android:textSize="14dp" />



            <!-- 비밀번호 -->
            <TextView
                android:id="@+id/model_signup_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="비밀번호"
                android:textColor="#404040"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/model_signup_edt_pw"
                style="@style/edittext_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_rect_edit"
                android:hint="비밀번호를 입력하세요"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textSize="14dp" />


            <Button
                android:id="@+id/model_signup_btn_next"
                style="@style/edittext_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="25dp"
                android:background="@color/title_bg_color"
                android:onClick="onClick"
                android:text="다음단계"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:clickable="true"
                android:id="@+id/model_signup_txt_clause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>