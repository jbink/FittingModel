<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/content_search_option"
    android:background="@color/white"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- 카테고리 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:layout_marginTop="20dp"
            android:text="카테고리"
            android:textSize="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_category_0"
                android:onClick="onCategoryClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웨딩"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back_on"/>
            <TextView
                android:id="@+id/frag_mall_search_category_1"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한복"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_category_2"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="파티드레스"
                android:gravity="center"
                android:textColor="#878787"
                android:layout_marginLeft="8dp"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>

        <!-- 성별 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:text="성별"
            android:layout_marginTop="20dp"
            android:textSize="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_sex_0"
                android:onClick="onSexClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back_on"/>
            <TextView
                android:id="@+id/frag_mall_search_sex_1"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_sex_2"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="외국인여자"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_sex_3"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="외국인남자"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>



        <!-- 연령대 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#404040"
            android:text="연령대"
            android:layout_marginTop="20dp"
            android:textSize="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_age_0"
                android:onClick="onAgeClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10대 초반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_1"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10대 중반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_2"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10대 후반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_age_3"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20대 초반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_4"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20대 중반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_5"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20대 후반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/frag_mall_search_age_6"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30대 초반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_7"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30대 중반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
            <TextView
                android:id="@+id/frag_mall_search_age_8"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30대 후반"
                android:gravity="center"
                android:textColor="#878787"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_select_back"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/search_option_init"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="이전"
            android:background="@drawable/border_rect_white"/>
        <Button
            android:id="@+id/search_option_complete"
            android:onClick="onClick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_ok"/>

    </LinearLayout>



</RelativeLayout>